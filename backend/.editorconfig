root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{json,yml,yaml,properties,xml}]
indent_size = 2
tab_width = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off
